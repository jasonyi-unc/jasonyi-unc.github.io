---
layout: default
---
{% if page._styles %}
  <!-- Page/Post style -->
  <style type="text/css">
    {{ page._styles }}
  </style>
{% endif %}

{% include scripts/mathjax_macros.liquid %}

<!-- hack to inherit CSS styles to suppress list counts -->
<div class="publications">
  {% bibliography --file summaries --query @*[id={{page.bib_id}}] %}
</div>

<div class="post">
  <article class="post-content">
    {% if page.toc and page.toc.beginning %}
      <div id="table-of-contents">
        {% toc %}
      </div>
      <hr>
    {% endif %}
    <div id="markdown-content">
      {{ content }}
    </div>
  </article>

  <p class="post-meta">Written {{ page.date | date: '%B %-d, %Y' }}</p>
</div>
